<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp" android:backgroundTint="#EBEBEB"
                android:background="@drawable/top_background2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Became A Member Signup Now"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/staic"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/logo"/>
            </RelativeLayout>


            <LinearLayout  android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#90FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Registration Type"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:layout_centerHorizontal="true"/>

                <!--Spinner widget-->
                <LinearLayout android:orientation="vertical"
                    android:background="@drawable/background_shape"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/coursesspinner"
                        android:layout_height="50dp"
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:drawableTint="#898989"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_user"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:id="@+id/ref_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Referral Id"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <EditText android:drawableTint="#898989"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_user"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Referral Name"
                            android:focusable="false"
                            android:padding="7dp" android:clickable="false"
                            android:textColor="@color/black"
                            android:id="@+id/ref_name_et"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_user"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/name_et"
                    android:textColor="@color/black"
                    android:hint="Full Name"
                    android:singleLine="true" />
                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_call"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLength="10" android:id="@+id/mob_et"
                    android:padding="7dp" android:inputType="number"
                    android:textColor="@color/black"
                    android:hint="Mobile No."
                    android:singleLine="true" />
                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_email_24dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/email_et"
                    android:textColor="@color/black"
                    android:hint="@string/Email"
                    android:singleLine="true" />
                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_home"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/add_et"
                    android:textColor="@color/black"
                    android:hint="@string/Address"
                    android:singleLine="true" />
                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_plot"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/shop_et"
                    android:textColor="@color/black"
                    android:hint="Shop Name/Business"
                    android:singleLine="true" />
                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:drawableTint="#898989"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_baseline_menu_book_24"
                            android:padding="7dp" android:id="@+id/pan_et"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter Pan No"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <EditText android:drawableTint="#898989"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_edit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter Addhar No."
                            android:inputType="number" android:id="@+id/adhar_et"
                            android:padding="7dp" android:maxLength="16"
                            android:textColor="@color/black"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_business"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/firm_et"
                    android:textColor="@color/black"
                    android:hint="Enter Firm Name"
                    android:singleLine="true" />

                <EditText
                    android:drawableTint="#898989"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_password"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="7dp" android:id="@+id/pass_et"
                    android:textColor="@color/black"
                    android:hint="Enter Password"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="30dp">
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:text="Note: I agree to the T&amp;Cs to Create Account\nNote : Password should be auto generated" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reg_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fadingEdgeLength="4dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/drawer"
                android:drawableRight="@drawable/right_arrow"
                android:drawableTint="@color/white"
                android:elevation="20dp"
                android:text="Register Now"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

